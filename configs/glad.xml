<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
<Style name="2016">
  <Rule>
    <RasterSymbolizer>
      <RasterColorizer default-mode="linear" epsilon="0.001">
        <stop color="red"         value = "0"   mode = "discrete" />
      </RasterColorizer>
    </RasterSymbolizer>
  </Rule>
</Style>

<Style name="2015">
  <Rule>
    <RasterSymbolizer>
      <RasterColorizer default-mode="linear" epsilon="0.001">
        <stop color="#ffa409"         value = "0"   mode = "linear" />
        <stop color="#ff4100"         value = "365"   mode = "discrete" />
      </RasterColorizer>
    </RasterSymbolizer>
  </Rule>
</Style>

  <Layer name="brazil2016" srs="+init=epsg:4326">
      <StyleName>2016</StyleName>
      <Datasource>
          <Parameter name="file">/data/brazil_day2016.tif</Parameter>
          <Parameter name="type">gdal</Parameter>
          <Parameter name="band">1</Parameter>
      </Datasource>
  </Layer>

